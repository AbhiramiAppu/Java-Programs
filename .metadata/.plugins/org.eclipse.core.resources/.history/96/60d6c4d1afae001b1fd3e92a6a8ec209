		eightButton.setBounds(110, 130, 60, 60);
		jf.add(eightButton);
		
		JButton nineButton = new JButton("9");
		nineButton.setBounds(190, 130, 60, 60);
		jf.add(nineButton);
		
		JButton fourButton = new JButton("4");
		fourButton.setBounds(30, 210, 60, 60);
		jf.add(fourButton);
		
