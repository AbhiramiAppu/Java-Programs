		sixButton.setBounds(190, 210, 60, 60);
		jf.add(sixButton);
		
		JButton oneButton = new JButton("1");
		oneButton.setBounds(30, 290, 60, 60);
		jf.add(oneButton);
		
		JButton twoButton = new JButton("2");
		twoButton.setBounds(110, 290, 60, 60);
